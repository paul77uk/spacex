<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: spaceships_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
        %>
        <%= submit_tag "Fly me to the Moon", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
